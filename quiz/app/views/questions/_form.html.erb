<%= form_for (@question) do |f| %>
<% if @question.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@question.errors.count, 'error') %>
   imposible guardar estas preguntas:</h2>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
    <div class="form-group">
  <%= f.label :text %><br/>
  <%= f.text_area :text, :size=>'50x3', :class=>'form-control',:placeholder=>'Escribe una pregunta'  %>
</div>
    <div class="actions">
      <%= f.submit 'Guardar Pregunta',   :class=>'btn btn-success btn-sm' %>
    </div>
<% end %>